<div class="row justify-content-evenly">
    <h2 class="col-5">Already a member?</h2>
    <h2 class="col-5">Join now...</h2>
</div>
<div class="row justify-content-evenly">
    <div class="card col-5 align-items-middle">
        <h2 class="card-header col-6 border-bottom-0">Login</h2>
        <div class="card-body d-flex align-items-center border border-2">
            <form class="form login-form d-flex flex-wrap justify-content-center">
                <div class="form-group col-12 mb-2">
                    <label for="email-login " class="col-5 text-end">Email:</label>
                    <input class="form-input col-6" type="text" id="email-login" />
                </div>
                <div class="form-group col-12 mb-2">
                    <label for="password-login" class="col-5 text-end" >Password:</label>
                    <input class="form-input col-6" type="password" id="password-login" />
                </div>
        </div>
        <div class="form-group card-footer ms-auto col-6 text-muted text-end align-items-center border-top-0">

            <button class="rounded p-2" type="submit">login</button>
        </div>

        </form>
    </div>
    <div class="card col-5">
        <h2 class="card-header col-6 border-bottom-0">Signup</h2>
        <div class="card-body d-flex align-items-center border border-2">
            <form class="form signup-form d-flex flex-wrap justify-content-center">
                <div class="form-group col-12 mb-2">
                    <label for="first_name_signup" class="col-5 text-end">First Name:</label>
                    <input class="form-input col-6" type="text" id="first_name_signup" />
                </div>
                <div class="form-group col-12 mb-2">
                    <label for="last_name_signup" class="col-5 text-end">Last Name:</label>
                    <input class="form-input col-6" type="text" id="last_name_signup" />
                </div>
                <div class="form-group col-12 mb-2">
                    <label for="username_signup" class="col-5 text-end">Username:</label>
                    <input class="form-input col-6" type="text" id="username_signup" placeholder="Must be unique"/>
                </div>
                <div class="form-group col-12 mb-2">
                    <label for="email_signup" class="col-5 text-end">Email:</label>
                    <input class="form-input col-6" type="text" id="email_signup" placeholder="Must be valid email" />
                </div>
                <div class="form-group col-12 mb-2">
                    <label for="password_signup" class="col-5 text-end">Password:</label>
                    <input class="form-input col-6" type="password" id="password_signup" placeholder="At least 8 characters"/>
                </div>
        </div>
        <div class="form-group card-footer ms-auto col-6 text-muted text-end align-items-center border-top-0">

            <button class="rounded p-2" type="submit">signup</button>
        </div>
        </form>

    </div>
</div>

<script src="./js/login.js"></script>